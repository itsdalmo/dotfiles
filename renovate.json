{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "recreateWhen": "always",
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    ".github/workflows/**"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "nix/machines/.*/configuration\\.nix$"
      ],
      "matchStrings": [
        "image\\s*=\\s*\"(?<depName>[^:]+):(?<currentValue>[^@]+)@(?<currentDigest>sha256:[^\"]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})$"
    }
  ]
}
